<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/menulayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <TableLayout>

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="241dp"
                android:layout_height="210dp"
                android:layout_marginTop="30dp"
                android:backgroundTint="#00FFFFFF"
                android:gravity="center"
                android:onClick="onHotelButtonClick"
                android:scaleType="fitCenter"
                android:src="@mipmap/ic_menuhotel_foreground"
                android:tag="hotel"
                tools:src="@mipmap/ic_menuhotel_foreground"
                tools:srcCompat="@mipmap/ic_menuhotel_foreground"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Habitacion" />
        </TableLayout>

        <TableLayout>

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="241dp"
                android:layout_height="210dp"
                android:layout_marginTop="30dp"
                android:backgroundTint="#00FFFFFF"
                android:gravity="center"
                android:onClick="onClick"
                android:scaleType="fitCenter"
                android:src="@mipmap/ic_menupool_foreground"
                tools:src="@mipmap/ic_menupool_foreground"
                tools:srcCompat="@mipmap/ic_menupool_foreground"
                tools:visibility="visible"
                android:tag="pool"/>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Zona Humeda"/>
        </TableLayout>
</TableLayout>
